<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="InkPageIndicator">
        <attr name="dotDiameter" format="dimension" />
        <attr name="dotGap" format="dimension" />
        <attr name="animationDuration" format="integer" />
        <attr name="pageIndicatorColor" format="color" />
        <attr name="currentPageIndicatorColor" format="color" />
    </declare-styleable>


    <declare-styleable name="SlidingTabLayout">
        <!-- indicator -->
        <attr name="tl_indicator_color" />
        <attr name="tl_indicator_height" />
        <attr name="tl_indicator_width" />
        <attr name="tl_indicator_margin_left" />
        <attr name="tl_indicator_margin_top" />
        <attr name="tl_indicator_margin_right" />
        <attr name="tl_indicator_margin_bottom" />
        <attr name="tl_indicator_corner_radius" />
        <attr name="tl_indicator_gravity" />
        <attr name="tl_indicator_style" />
        <attr name="tl_indicator_width_equal_title" />

        <!-- underline -->
        <attr name="tl_underline_color" />
        <attr name="tl_underline_height" />
        <attr name="tl_underline_gravity" />

        <!-- divider -->
        <attr name="tl_divider_color" />
        <attr name="tl_divider_width" />
        <attr name="tl_divider_padding" />

        <!-- tab -->
        <attr name="tl_tab_padding" />
        <attr name="tl_tab_space_equal" />
        <attr name="tl_tab_width" />

        <!-- title -->
        <attr name="tl_textsize" />
        <attr name="tl_textSelectColor" />
        <attr name="tl_textUnselectColor" />
        <attr name="tl_textBold" />
        <attr name="tl_textAllCaps" />

        <attr name="tl_margin_right" format="dimension"/>

    </declare-styleable>

    <!--标签的自定义 style-->
    <declare-styleable name="TagViewStyle">
        <!--标签的文本-->
        <attr name="tagText" format="string" />
        <!--标签的数量-->
        <attr name="tagCount" format="string" />
        <!--标签文本颜色-->
        <attr name="tagTextColor" format="color" />
        <!--标签文本字体大小-->
        <attr name="tagTextSize" format="dimension" />
        <!--标签背景颜色-->
        <attr name="tagBackground" format="reference" />

        <attr name="tagStatus" format="enum">
            <enum name="status_default" value="0"/>
            <enum name="status_selected" value="1"/>fa
            <enum name="status_un_enable" value="2"/>
            <enum name="status_just_show" value="3"/>
            <enum name="status_dialog_style" value="4"/>
        </attr>

    </declare-styleable>

</resources>